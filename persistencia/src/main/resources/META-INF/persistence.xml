            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="M30615215f-"/>

            <!-- Hibernate Configurações -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- Atualiza o esquema automaticamente -->
            <property name="hibernate.show_sql" value="true"/> <!-- Mostra as queries no console -->
            <property name="hibernate.format_sql" value="true"/> <!-- Formata as queries -->
        </properties>
    </persistence-unit>
</persistence>